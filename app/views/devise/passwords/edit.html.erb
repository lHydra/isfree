<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form-signin' }) do |f| %>
  <h3 class='form-signin-headin'>Изменить пароль</h3>
  <hr class='colorgraph'><br>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <%= f.input :password, label: 'Новый пароль', required: true, autofocus: true, input_html: { class: 'form-control' } %>
  <%= f.input :password_confirmation, label: 'Подтвердите новый пароль', required: true, input_html: { class: 'form-control' } %>

  <div class="form-actions">
    <%= f.button :submit, 'Изменить пароль', class: 'btn-lg btn-primary btn-block' %>
  </div>

  <%= render "devise/shared/links" %>  
<% end %>
