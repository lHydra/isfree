<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-signin' }) do |f| %>
  <h3 class='form-signin-heading'>Зарегистрироваться</h3>
  <hr class='colorgraph'><br>

  <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' } %>
  <%= f.input :password, required: true, input_html: { class: 'form-control' } %>
  <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control' } %>

  <div class="form-actions">
    <%= f.button :submit, "Зарегистрироваться", class: 'btn-lg btn-primary btn-block' %>
  </div>
  <%= render "devise/shared/links" %>
<% end %>
